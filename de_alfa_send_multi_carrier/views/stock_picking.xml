<odoo>
<record id="view_picking_internal_search_inh" model="ir.ui.view">
            <field name="name">stock.picking.internal.search.inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search" />
			<field name="arch" type="xml">
	
				<xpath expr="//filter[@name='picking_type']" position="after">
					<filter string="Carrier" name="carrier_id" domain="[]" context="{'group_by': 'carrier_id'}"/>

				</xpath>
				<filter name="done" position="before"> 
					 <filter string="To send to carrier" name="to send" domain="[('delivery_state','=',False),('state','=','assigned')]" />

				</filter>
	
			</field>
            
        </record>

 <record id="view_picking_withcarrier_out_tree" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                    <field name="carrier_id" />
					 <field name="delivery_state" widget="badge" decoration-success="delivery_state=='customer_delivered'" />
                    <field name="status_code" widget="badge" />

            </xpath>
            <field name="partner_id" position="after">
           <!-- <button name="correct_country"  string="correct country" type="object" class="oe_highlight" /> -->

                <field name="delivery_country" />
        </field>
        </field>
    </record>
  
    </odoo>