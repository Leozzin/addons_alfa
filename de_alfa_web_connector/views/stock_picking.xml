<?xml version="1.0" encoding="utf-8"?>
<odoo>
	  <record id="action_change_supplier" model="ir.actions.act_window">
            <field name="name">Changer fournisseur</field>
            <field name="res_model">supplier.change</field>
            <field name="view_mode">form</field>
             <field name="target">new</field>

        </record>

	<record id="stock_picking_form_view_inherit" model="ir.ui.view">
		<field name="name">stock.picking.form</field>
		<field name="model">stock.picking</field>
		<field name="inherit_id" ref="stock.view_picking_form" />
		<field name="arch" type="xml">


			 <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='quantity_done']" position="after" >
			   <button class="oe_stat_button" string="Changer fournisseur" type="action" name="%(action_change_supplier)d"
                                icon="fa-user" widget="statinfo" />
           </xpath>
			<xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
				<field name="custom_supplier_id" optional='hide'/>
				<field name="detail_order_id" optional='hide'/>
				<field name="supplier_old_id" readonly="True"/>
			</xpath>
			<xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
				<field name="incertain" />
				
			</xpath>
			
			<xpath expr="//field[@name='origin']" position="after">
				<field name="first_product_id" invisible="True"/>
				<field name="sale_reference" />
				<!--<button class="oe_stat_button" string="createpdf" type="object" name="createpdf"
                                icon="fa-user" widget="statinfo" />
				  <button class="oe_stat_button" string="correct_sale" type="object" name="correct_sale"
                                icon="fa-user" widget="statinfo" /> -->
				<field name="is_update" invisible="1" />
			</xpath>

		</field>
	</record>
	
	
	
	
	
	
	
		<record id="view_picking_internal_search_inh" model="ir.ui.view">
            <field name="name">stock.picking.internal.search.inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search" />
			<field name="arch" type="xml">
	
				<xpath expr="//filter[@name='picking_type']" position="after">
					<filter string="Product" name="first_product_id" domain="[]" context="{'group_by': 'first_product_id'}"/>
				</xpath>
	
			</field>
            
        </record>


</odoo>


